<?xml version="1.0" encoding="UTF-8"?>
<obfl xmlns="http://www.daisy.org/ns/2011/obfl" version="2011-1" xml:lang="und" hyphenate="false">
   <meta>
      <dc:title xmlns:dc="http://purl.org/dc/elements/1.1/">page-template-first-of-volume</dc:title>
      <dc:description xmlns:dc="http://purl.org/dc/elements/1.1/">Tests that "first page of volume" template can be selected.</dc:description>
   </meta>
   <layout-master name="a" page-width="10" page-height="5" duplex="true" page-number-variable="page">
      <template use-when="(= $page-in-volume 1)">
         <header>
            <field>
               <current-page number-format="default"/>
            </field>
         </header>
         <footer/>
      </template>
      <default-template>
         <header/>
         <footer/>
      </default-template>
   </layout-master>
   <volume-template sheets-in-volume-max="1"/>
   <sequence master="a">
      <block>⠁⠁⠁⠁⠁ ⠁⠁⠁⠁⠁ ⠁⠁⠁⠁⠁
