<?xml version="1.0" encoding="UTF-8"?>
<obfl xmlns="http://www.daisy.org/ns/2011/obfl" version="2011-1" xml:lang="und" hyphenate="false">
   <meta>
      <dc:title xmlns:dc="http://purl.org/dc/elements/1.1/">page-template-right-initial-page-number</dc:title>
      <dc:description xmlns:dc="http://purl.org/dc/elements/1.1/">Tests that "right-hand page" template can be selected independently of initial-page-number.</dc:description>
   </meta>
   <layout-master name="a" page-width="10" page-height="5" duplex="true" page-number-variable="page">
      <template use-when="(= (% $page-in-volume 2) 1)">
         <header>
            <field>
               <current-page number-format="default"/>
            </field>
         </header>
         <footer/>
      </template>
      <default-template>
         <header/>
         <footer/>
      </default-template>
   </layout-master>
   <sequence master="a" initial-page-number="2">
      <block>⠁⠁⠁⠁⠁
              ⠁⠁⠁⠁⠁
              ⠁⠁⠁⠁⠁
            </block>
   </sequence>
</obfl>